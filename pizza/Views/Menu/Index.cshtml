@model List<pizza.Models.Dish>
    @{
        ViewData["Title"] = "Menu";
    }

    <div class=" container">
        <div class=" row">
            @foreach( var c in Model)
            {
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@c.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@c.Name</h5>
                    <a  asp-action="details" asp-route-id="@c.Id" class="btn btn-primary">View</a>
                </div>
            </div>
            }

    </div>